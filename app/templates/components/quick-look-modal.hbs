<div class="modal">
  <div class="modal-header">
    Allocation: {{project.name}}
    <span class="close-x" {{action "close"}}>&#10060;</span>
  </div>

  <div class="modal-body">
    {{#if person }}
    <h3><i>&#128100;</i> 
      <a href="{{person.editUrl}}" class="text-link">{{person.name}}</a> 
      <span class="person-role">({{person.role}})</span>
    </h3>
    {{/if}}
    {{#if role }}
      <h3><i>&#128100;</i> {{model.role}}</h3>
    {{/if}}
    <h3><i>&#128197;</i> {{startDate}} - {{endDate}}</h3>
    <h3><i>&#59249;</i> {{model.status}}</h3>
    <h3><i>&#9716;</i> {{model.percentAllocated}}% Allocated</h3>
    {{#if notes}}
      <h3><i>&#9998;</i> {{model.notes}}</h3>
    {{/if}}
  </div>

  <div class="modal-footer">
    <button class="blue-button" {{action "edit" model}}>Edit</button>
    <button class="white-button" {{action "close"}}>Cancel</button>
  </div>
</div>
<div class=modal-backdrop></div>
