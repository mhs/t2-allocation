<select
    {{action 'change' on='change'}}
    class="{{class}}"
    prompt="{{prompt}}">
  {{#each content key="@index" as |item|}}
    <option value="{{item}}" selected={{eq item selection}}>
      {{#if hasBlock}}
        {{yield item}}
      {{else}}
        {{item.name}}
      {{/if}}
    </option>
  {{/each}}
</select>
