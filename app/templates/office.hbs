<header>
  <section class="nav-bar">
    <div class="faux-select">
      <div class="faux-select-box">
        <span class="faux-select-selected">{{model.name}}</span>
        <span class="faux-select-graphic">&#x25BE;</span>
      </div>
      {{view "select-office" contentBinding="allActive"
                              optionLabelPath="content.name"
                              optionValuePath="content"
                              selectionBinding="model"
                              data-test="all"
                              class="faux-select-element"}}
    </div>

    <div class="add-project">
      <a class="add-project-button" {{bind-attr href="newProjectUrl"}}>+ Add Project</a>
    </div>

    {{view "nav"}}
  </section>

  {{calendar-bar action="selectDate" resize="resize"}}
</header>

{{outlet}}
